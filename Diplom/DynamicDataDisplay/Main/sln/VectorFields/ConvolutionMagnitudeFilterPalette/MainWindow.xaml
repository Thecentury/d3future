<Window x:Class="ConvolutionMagnitudeFilterPalette.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="555">
    <Grid>
		<Canvas>
			<d3:PaletteControl Margin="30" Width="500">
				<d3:UniformLinearPalette>
					<d3:UniformPaletteColorStep Color="Green"/>
					<d3:UniformPaletteColorStep Color="YellowGreen"/>
					<d3:UniformPaletteColorStep Color="Red"/>
				</d3:UniformLinearPalette>
			</d3:PaletteControl>
		</Canvas>
	</Grid>
</Window>
