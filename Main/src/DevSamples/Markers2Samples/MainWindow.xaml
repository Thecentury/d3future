<Window x:Class="Markers2Samples.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
		xmlns:df="http://research.microsoft.com/DynamicDataDisplay/1.1"
		Title="MainWindow" Height="350" Width="525">
	<Grid>
		<d3:ChartPlotter Name="plotter">
			<df:LineChart x:Name="lineChart"
						  ItemsSource="sin(x)+sin(t)+cos(2*x)+sin(21*x)"
						  StrokeThickness="2" 
						  Description="Some chart" 
						  DetailedDescription="Some detailed description"/>
			<d3:CursorCoordinateGraph/>
		</d3:ChartPlotter>
	</Grid>
</Window>
